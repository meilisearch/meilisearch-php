# https://editorconfig.org/

root = true

[*]
trim_trailing_whitespace = true
insert_final_newline     = true
end_of_line              = lf
charset                  = utf-8
tab_width                = 4
indent_style             = space

[*.php]
indent_size              = 4
indent_style             = space

[*.md]
indent_style             = space
max_line_length          = 80

[*{.yaml, yml}]
indent_size              = 2
indent_style             = space
